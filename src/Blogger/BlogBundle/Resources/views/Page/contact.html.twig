{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact blog</h1>
    </header>

    <p>Want to contact blog?</p>

    <form action="{{ path('blog_contact') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        <div class="control-group">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

            <input class="btn btn-primary pull-right" type="submit" value="Submit" />
        </div>
    </form>

{% endblock %}